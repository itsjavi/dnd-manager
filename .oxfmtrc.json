{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": false,
  "printWidth": 100,
  "trailingComma": "all",
  "tabWidth": 2,
  "proseWrap": "always",
  "singleQuote": true,
  "arrowParens": "always",
  "jsxSingleQuote": false,
  "quoteProps": "as-needed",
  "sortPackageJson": true,
  "ignorePatterns": [
    "build/",
    "dist/",
    "release/",
    "node_modules/",
    ".yarn/",
    ".pnpm-store/",
    ".cache/",
    "coverage/",
    "public/",
    "assets/",
    "*.min.json",
    ".ignore/",
    ".local/",
    "tmp/",
    "pnpm-*.yaml"
  ]
}
